{
  "root": true,
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "!!apps/docs",
      "!!packages/design-system/components/ui",
      "!!packages/design-system/lib",
      "!!packages/design-system/hooks",
      "!!packages/collaboration/config.ts",
      "!!packages/cms/basehub-types.d.ts",
      "!!**/basehub-types.d.ts",
      "!!**/test/mocks",
      "!!**/.codex",
      "!!**/.claude",
      "!!**/codex-plans",
      "!!**/claude-code-plans",

      "!!**/.next",
      "!!**/node_modules",
      "!!**/dist",
      "!!**/build",
      "!!**/generated",
      "!!**/coverage",
      "!!**/.turbo",
      "!!**/.vercel",
      "!!**/out",
      "!!**/storybook-static",
      "!!**/playwright-report",
      "!!**/test-results",
      "!!**/test-gen",
      "!!**/.contentlayer",
      "!!**/.content-collections",
      "!!**/.react-email",
      "!!**/.specify",
      "!!**/*.tsbuildinfo",
      "!!**/*.snap",

      "!!**/conformance/expected"
    ]
  },
  "extends": [
    "ultracite/biome/core",
    "ultracite/biome/react",
    "ultracite/biome/next"
  ],
  "linter": {
    "rules": {
      "nursery": "off",
      "suspicious": {
        "noExplicitAny": "warn"
      }
    }
  },
  "javascript": {
    "globals": ["Liveblocks"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "overrides": [
    {
      "includes": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.test.skip.ts",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/playwright-verify-*.spec.ts"
      ],
      "javascript": {
        "globals": [
          "vitest",
          "vi",
          "describe",
          "it",
          "test",
          "expect",
          "beforeAll",
          "afterAll",
          "beforeEach",
          "afterEach",
          "jest"
        ]
      },
      "linter": {
        "rules": {
          "performance": {
            "useTopLevelRegex": "off"
          }
        }
      }
    },
    {
      "includes": ["packages/**"],
      "linter": {
        "rules": {
          "performance": {
            "noBarrelFile": "off"
          }
        }
      }
    },
    {
      "includes": ["apps/**"],
      "linter": {
        "rules": {
          "performance": {
            "noBarrelFile": "error"
          }
        }
      }
    },
    {
      "includes": ["**/postcss.config.*"],
      "linter": {
        "rules": {
          "performance": {
            "noBarrelFile": "off"
          }
        }
      }
    },
    {
      "includes": ["**/basehub-types.d.ts", "**/test/mocks/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          },
          "correctness": {
            "useImageSize": "off"
          },
          "performance": {
            "noImgElement": "off"
          }
        }
      },
      "javascript": {
        "formatter": {
          "enabled": false
        }
      }
    },
    {
      "includes": ["**/__snapshots__/**/*.ts"],
      "javascript": {
        "formatter": {
          "enabled": false
        }
      }
    }
  ]
}
