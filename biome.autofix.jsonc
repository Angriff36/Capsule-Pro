{
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },

  "files": {
    "includes": ["apps/**", "packages/**"],
    "experimentalScannerIgnores": [
      "apps/docs/**",
      "packages/design-system/components/ui/**",
      "packages/design-system/lib/**",
      "packages/design-system/hooks/**",
      "packages/collaboration/config.ts",
      "packages/cms/basehub-types.d.ts",
      "**/.codex/**",
      "**/.claude/**",
      "**/codex-plans/**",
      "**/claude-code-plans/**",
      "**/.next/**",
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**",
      "**/playwright-report/**",
      "**/test-results/**",
      "**/test-gen/**",
      "**/generated/**",
      "**/.turbo/**",
      "**/.vercel/**",
      "**/storybook-static/**",
      "**/.contentlayer/**",
      "**/.content-collections/**",
      "**/.react-email/**",
      "**/out/**",
      "**/.specify/**",
      "**/*.tsbuildinfo"
    ]
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },

  "overrides": [
    {
      "includes": ["apps/api/app/api/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    }
  ]
}
