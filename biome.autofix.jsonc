{
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },

  "files": {
    "includes": ["apps/**/*", "packages/**/*", "!apps/docs/**/*"]
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },

  "overrides": [
    {
      "includes": ["apps/api/app/api/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    }
  ]
}
