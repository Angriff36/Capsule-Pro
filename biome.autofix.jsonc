{
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": [
      "apps/**",
      "packages/**",
      "!!**/dist",
      "!!**/build",
      "!!**/.next",
      "!!**/generated",
      "!!**/coverage",
      "!!**/.turbo",
      "!!**/.vercel",
      "!!**/test-results",
      "!!**/playwright-report",
      "!!**/test-gen",
      "!!**/conformance/expected",
      "!!**/node_modules",
      "!!apps/docs",
      "!!packages/design-system/components/ui",
      "!!packages/design-system/lib",
      "!!packages/design-system/hooks",
      "!!packages/collaboration/config.ts",
      "!!packages/cms/basehub-types.d.ts",
      "!!**/.codex",
      "!!**/.claude",
      "!!**/codex-plans",
      "!!**/claude-code-plans",
      "!!**/storybook-static",
      "!!**/.contentlayer",
      "!!**/.content-collections",
      "!!**/.react-email",
      "!!**/out",
      "!!**/.specify",
      "!!**/*.tsbuildinfo"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "overrides": [
    {
      "includes": ["apps/api/app/api/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    }
  ]
}
