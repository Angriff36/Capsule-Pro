{
  "name": "next-forge",
  "version": "5.3.2",
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": "22.12.0"
  },
  "bin": {
    "next-forge": "dist/index.js"
  },
  "files": [
    "dist/index.js"
  ],
  "scripts": {
    "docs:list": "bun ./tools/scripts/docs-list.ts",
    "browser-tools": "npx chrome-devtools-mcp@latest --headless=false --isolated=true --viewport=1920x1080",
    "build": "turbo build",
    "dev": "turbo dev --parallel",
    "dev:check": "node scripts/dev.mjs",
    "dev:apps": "turbo dev --parallel --filter=app --filter=web --filter=api --filter=docs --filter=email --filter=storybook",
    "check": "npx ultracite@latest check",
    "fix": "npx ultracite@latest fix",
    "test": "turbo test",
    "analyze": "turbo analyze",
    "translate": "turbo translate",
    "boundaries": "turbo boundaries",
    "bump-deps": "npx npm-check-updates --deep -u --reject recharts && pnpm install",
    "bump-ui": "cd packages/design-system && pnpm dlx shadcn@latest add --all --overwrite",
    "prisma:format": "cd packages/database && npx prisma format",
    "prisma:generate": "cd packages/database && npx prisma generate",
    "db:push": "cd packages/database && npx prisma db push",
    "migrate": "pnpm prisma:format && pnpm prisma:generate && pnpm db:push",
    "clean:preview": "git clean -ndx",
    "clean:hard": "git clean -xdf",
    "clean:node_modules": "git clean -xdf node_modules",
    "secrets:scan": "secretlint \"**/*\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@auto-it/first-time-contributor": "^11.3.6",
    "@biomejs/biome": "2.3.8",
    "@clack/prompts": "^0.11.0",
    "@playwright/test": "^1.57.0",
    "@repo/typescript-config": "workspace:*",
    "@secretlint/secretlint-rule-database-connection-string": "^11.3.0",
    "@secretlint/secretlint-rule-preset-recommend": "^11.3.0",
    "@turbo/gen": "^2.6.3",
    "@types/node": "24.10.1",
    "commander": "^14.0.2",
    "cross-env": "^7.0.3",
    "husky": "^9.1.7",
    "secretlint": "^11.3.0",
    "tsup": "^8.5.1",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3",
    "ultracite": "6.3.9",
    "vitest": "^4.0.15"
  },
  "pnpm": {
    "overrides": {
      "parse5": "^7.2.1",
      "next": "16.0.10",
      "react": "19.2.3",
      "react-dom": "19.2.3",
      "@types/react": "19.2.7",
      "@types/react-dom": "19.2.3"
    },
    "ignoredBuiltDependencies": [
      "@clerk/shared",
      "bufferutil",
      "core-js",
      "core-js-pure",
      "protobufjs"
    ],
    "onlyBuiltDependencies": [
      "@prisma/engines",
      "@sentry/cli",
      "esbuild",
      "prisma",
      "sharp"
    ]
  },
  "type": "module"
}
