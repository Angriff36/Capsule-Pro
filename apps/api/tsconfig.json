{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "paths": {
      "@/*": ["./*"],
      "@repo/*": ["../../packages/*"]
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "test-scripts", ".next", "dist"]
}
