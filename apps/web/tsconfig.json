{
  "extends": [
    "@repo/typescript-config/nextjs.json",
    "@repo/cms/typescript-config.json"
  ],
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"],
      "@repo/*": ["../../packages/*"]
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "basehub-types.d.ts",
    "basehub.config.ts"
  ]
}
