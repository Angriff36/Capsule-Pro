{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "ignoreDeprecations": "5.0",

    "noEmit": true,
    "declaration": false,
    "emitDeclarationOnly": false,

    "paths": {
      "@/*": ["./*"],
      "@repo/*": ["../../packages/*"],
      "@api/staff/*": ["../api/app/api/staff/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ]
}
