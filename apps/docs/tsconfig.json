{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {

    "declaration": false,
    "declarationMap": false,

    "paths": {
      "@/*": ["./*"],
      "@repo/*": ["../../packages/*"],
      "fumadocs-mdx:collections/*": ["./.source/*"],
      "@/.source": ["./.source/index.ts"]
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ]
}
